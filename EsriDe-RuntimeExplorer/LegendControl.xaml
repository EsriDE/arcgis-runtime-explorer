<UserControl x:Class="EsriDe.RuntimeExplorer.LegendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:EsriDe.RuntimeExplorer"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             DataContext="{StaticResource Locator}">
    <Grid>
        <StackPanel>
            <TextBlock Text="--- Layerliste ---" />
            <TextBlock DataContext="{Binding MainData.SelectedMapView.Map.OperationalLayers}" Text="{Binding Count}" />
            <ListView ItemsSource="{Binding MainData.SelectedMapView.Map.OperationalLayers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}"></TextBlock>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</UserControl>